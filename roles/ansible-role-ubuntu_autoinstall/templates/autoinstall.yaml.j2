autoinstall:
  version: 1
  
  # 1. Identit√§t & Hostname

  locale: "{{ locale }}"
  keyboard:
    layout: "{{ keyboard_layout }}"
  timezone: "{{ timezone }}"

  # 3. Speicher (Externalisiert in ubuntu_auto_install_storage)
#  storage: 
# ubuntu_auto_install_storage | to_nice_yaml(indent=2, sort_keys=False) | indent(4, true) 
  storage:  
    config:
      - id: mmc0
        type: disk
        ptable: gpt
        path: /dev/mmcblk0
        serial: '0xa6ae2969'
        wipe: superblock-recursive
        grub_device: true

      - id: mmc0p1
        type: partition
        device: mmc0
        number: 1
        size: 1G
        flag: boot
        grub_device: true

      - id: mmc0p2
        type: partition
        device: mmc0
        number: 2
        size: -1

      - id: fmt-esp
        type: format
        volume: mmc0p1
        fstype: vfat

      - id: fmt-root
        type: format
        volume: mmc0p2
        fstype: ext4

      - id: mnt-esp
        type: mount
        path: /boot/efi
        device: fmt-esp

      - id: mnt-root
        type: mount
        path: /
        device: fmt-root

  identity:
    hostname: "{{ hostname }}"
    password: "{{ password_hash }}"
    username: "{{ username }}"


  # 4. SSH Zugang
  ssh:
    install-server: true
    allow-pw: false
    authorized-keys:
      - "{{ ssh_public_key }}"
      